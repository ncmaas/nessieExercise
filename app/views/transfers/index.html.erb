<p id="notice"><%= notice %></p>

<h1>Listing Transfers</h1>

<table>
  <thead>
    <tr>
      <th>Uid</th>
      <th>Type</th>
      <th>Date</th>
      <th>Status</th>
      <th>Medium</th>
      <th>Payer</th>
      <th>Payee</th>
      <th>Amount</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @transfers.each do |transfer| %>
      <tr>
        <td><%= transfer.uid %></td>
        <td><%= transfer.the_type %></td>
        <td><%= transfer.date %></td>
        <td><%= transfer.status %></td>
        <td><%= transfer.medium %></td>
        <td><%= transfer.payer_id %></td>
        <td><%= transfer.payee_id %></td>
        <td><%= transfer.amount %></td>
        <td><%= transfer.description %></td>
        <td><%= link_to 'Show', transfer %></td>
        <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
        <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

